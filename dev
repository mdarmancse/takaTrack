#!/bin/bash

# TakaTrack Development Script

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Function to check if Docker is running
check_docker() {
    if ! docker info > /dev/null 2>&1; then
        print_error "Docker is not running. Please start Docker and try again."
        exit 1
    fi
}

# Function to create .env files if they don't exist
setup_env() {
    if [ ! -f .env ]; then
        print_status "Creating .env file..."
        cp .env.example .env
        print_success ".env file created"
    fi

    if [ ! -f backend/.env ]; then
        print_status "Creating backend/.env file..."
        cp backend/.env.example backend/.env
        print_success "Backend .env file created"
    fi

    if [ ! -f frontend/.env ]; then
        print_status "Creating frontend/.env file..."
        cp frontend/.env.example frontend/.env
        print_success "Frontend .env file created"
    fi
}

# Function to start development environment
start_dev() {
    print_status "Starting TakaTrack development environment..."
    
    check_docker
    setup_env
    
    print_status "Building and starting containers..."
    docker-compose up -d --build
    
    print_status "Waiting for services to be ready..."
    sleep 10
    
    print_status "Running database migrations..."
    docker-compose exec app php artisan migrate --force
    
    print_status "Seeding database..."
    docker-compose exec app php artisan db:seed --force
    
    print_status "Installing frontend dependencies..."
    docker-compose exec frontend npm install
    
    print_status "Building frontend assets..."
    docker-compose exec frontend npm run build
    
    print_success "Development environment is ready!"
    echo ""
    echo "üåê Frontend: http://localhost:3000"
    echo "üîß Backend API: http://localhost:8000"
    echo "üìö API Docs: http://localhost:8000/api/docs"
    echo "üóÑÔ∏è  Database: localhost:3306"
    echo "üîÑ Redis: localhost:6379"
    echo ""
    echo "Demo credentials:"
    echo "Email: demo@takatrack.com"
    echo "Password: password"
}

# Function to stop development environment
stop_dev() {
    print_status "Stopping TakaTrack development environment..."
    docker-compose down
    print_success "Development environment stopped"
}

# Function to restart development environment
restart_dev() {
    print_status "Restarting TakaTrack development environment..."
    docker-compose down
    docker-compose up -d --build
    print_success "Development environment restarted"
}

# Function to show logs
show_logs() {
    if [ -z "$1" ]; then
        docker-compose logs -f
    else
        docker-compose logs -f "$1"
    fi
}

# Function to run backend tests
test_backend() {
    print_status "Running backend tests..."
    docker-compose exec app php artisan test
    print_success "Backend tests completed"
}

# Function to run frontend tests
test_frontend() {
    print_status "Running frontend tests..."
    docker-compose exec frontend npm test
    print_success "Frontend tests completed"
}

# Function to run E2E tests
test_e2e() {
    print_status "Running E2E tests..."
    docker-compose exec frontend npm run test:e2e
    print_success "E2E tests completed"
}

# Function to run all tests
test_all() {
    print_status "Running all tests..."
    test_backend
    test_frontend
    test_e2e
    print_success "All tests completed"
}

# Function to clean up
clean() {
    print_status "Cleaning up development environment..."
    docker-compose down -v
    docker system prune -f
    print_success "Cleanup completed"
}

# Function to show help
show_help() {
    echo "TakaTrack Development Script"
    echo ""
    echo "Usage: ./dev [command]"
    echo ""
    echo "Commands:"
    echo "  up          Start the development environment"
    echo "  down        Stop the development environment"
    echo "  restart     Restart the development environment"
    echo "  logs        Show logs (optionally specify service)"
    echo "  test        Run all tests"
    echo "  test-backend    Run backend tests only"
    echo "  test-frontend   Run frontend tests only"
    echo "  test-e2e        Run E2E tests only"
    echo "  clean       Clean up containers and volumes"
    echo "  help        Show this help message"
    echo ""
    echo "Examples:"
    echo "  ./dev up"
    echo "  ./dev logs app"
    echo "  ./dev test"
    echo "  ./dev clean"
}

# Main script logic
case "$1" in
    up)
        start_dev
        ;;
    down)
        stop_dev
        ;;
    restart)
        restart_dev
        ;;
    logs)
        show_logs "$2"
        ;;
    test)
        test_all
        ;;
    test-backend)
        test_backend
        ;;
    test-frontend)
        test_frontend
        ;;
    test-e2e)
        test_e2e
        ;;
    clean)
        clean
        ;;
    help|--help|-h)
        show_help
        ;;
    *)
        print_error "Unknown command: $1"
        echo ""
        show_help
        exit 1
        ;;
esac
